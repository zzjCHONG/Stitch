<Window
    x:Class="Stitsch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:advanced="clr-namespace:Simscop.Pl.Core.Models.Advanced"
    xmlns:converters="clr-namespace:Simscop.Pl.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:Stitsch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance local:StitchViewModel}"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:ColorSchemeToBrushConverter x:Key="ColorNameToBrushConverter" />
        <converters:NormIndexToVisibilityConverter x:Key="NormIndexToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <StackPanel>
                <TextBox
                    Margin="5"
                    FontSize="13"
                    Text="{Binding Root}" />

                <UniformGrid Columns="3">
                    <Button Command="{Binding LoadCommand}" Content="Load" />
                    <Button Command="{Binding ApplyCommand}" Content="Apply" />
                    <Button Command="{Binding SaveCommand}" Content="Save" />
                    <GroupBox Header="XClipCount">
                        <liftui:NumericUpDown Minimum="0" Value="{Binding XClipCount}" />
                    </GroupBox>
                    <GroupBox Header="YClipCount">
                        <liftui:NumericUpDown Minimum="0" Value="{Binding YClipCount}" />
                    </GroupBox>
                    <GroupBox Header="Filter">
                        <ComboBox ItemsSource="{Binding DisposeMode}" SelectedIndex="{Binding DisposeIndex}" />
                    </GroupBox>
                </UniformGrid>

                <GroupBox
                    Margin="5,10"
                    Background="White"
                    Header="Blender参数调整"
                    Style="{DynamicResource GroupBoxTab}"
                    Visibility="Visible">
                    <UniformGrid Columns="2">
                        <GroupBox
                            Margin="10,5"
                            HorizontalContentAlignment="Left"
                            Header="Blender模式"
                            Style="{DynamicResource GroupBoxOriginal}">
                            <ToggleButton
                                Margin="2,0,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Focusable="False"
                                IsChecked="{Binding IsBlenderMode}"
                                Style="{DynamicResource ToggleButtonCustom}">
                                <liftui:StatusSwitchElement.CheckedElement>
                                    <Border
                                        Background="{DynamicResource PrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Label
                                            Height="32"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Content="Blender"
                                            FontSize="13"
                                            Foreground="White" />
                                    </Border>
                                </liftui:StatusSwitchElement.CheckedElement>
                                <Border
                                    Background="{DynamicResource RegionBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Label
                                        Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="Blender"
                                        FontSize="13"
                                        Foreground="{DynamicResource PrimaryTextBrush}" />
                                </Border>
                            </ToggleButton>
                        </GroupBox>
                        <GroupBox
                            Margin="10,5"
                            HorizontalContentAlignment="Left"
                            Header="过渡像素数"
                            Style="{DynamicResource GroupBoxOriginal}">
                            <liftui:NumericUpDown
                                Height="32"
                                Minimum="1"
                                ValueFormat="N0"
                                Value="{Binding TransitionRegion}" />
                        </GroupBox>
                    </UniformGrid>
                </GroupBox>

                <Border
                    Margin="2"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="GroupBox">
                                <Setter Property="HeaderTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock FontWeight="Bold" Text="{Binding}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Margin" Value="20,3" />
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                                <Setter Property="VerticalContentAlignment" Value="Top" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="GroupBox">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel
                                                    Margin="0,8,6,8"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Orientation="Horizontal">
                                                    <ContentPresenter
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        ContentSource="Header"
                                                        RecognizesAccessKey="True"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                                </StackPanel>
                                                <ContentPresenter
                                                    x:Name="Presenter"
                                                    Grid.Column="1"
                                                    Margin="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock
                            Margin="20,10,0,10"
                            HorizontalAlignment="Left"
                            FontSize="13"
                            Text="图像调整" />

                        <Separator Margin="10,0,10,10" Background="Black" />

                        <GroupBox Header="归一化">

                            <DockPanel LastChildFill="False">

                                <CheckBox
                                    Margin="0,5,0,0"
                                    IsChecked="{Binding DisplayCurrent.Norm}"
                                    Style="{DynamicResource ToggleButtonSwitch}"
                                    Visibility="Collapsed" />
                                <ComboBox
                                    x:Name="NormMode"
                                    DockPanel.Dock="Right"
                                    ItemsSource="{Binding DisplayCurrent.NormMode}"
                                    SelectedIndex="{Binding DisplayCurrent.NormIndex}" />

                                <liftui:NumericUpDown
                                    Width="80"
                                    DockPanel.Dock="Right"
                                    Maximum="99"
                                    Minimum="1"
                                    ValueFormat="N0"
                                    Visibility="{Binding DisplayCurrent.NormIndex, Converter={StaticResource NormIndexToVisibilityConverter}}"
                                    Value="{Binding DisplayCurrent.PercenttileScore}" />

                            </DockPanel>


                        </GroupBox>

                        <GroupBox Header="亮度">
                            <DockPanel>
                                <liftui:NumericUpDown
                                    Width="75"
                                    Height="30"
                                    Padding="8,7,5,5"
                                    HorizontalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    FontSize="12"
                                    Maximum="100"
                                    Minimum="-100"
                                    ValueFormat="N0"
                                    Value="{Binding ElementName=BrightnessSlider, Path=Value, Delay=100}" />
                                <Slider
                                    x:Name="BrightnessSlider"
                                    Margin="-5,0,10,0"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="1"
                                    Maximum="100"
                                    Minimum="-100"
                                    SmallChange="1"
                                    TickFrequency="1"
                                    Value="{Binding DisplayCurrent.Brightness, Mode=TwoWay, Delay=100}" />
                            </DockPanel>
                        </GroupBox>

                        <GroupBox Header="对比度">
                            <DockPanel>
                                <liftui:NumericUpDown
                                    Width="75"
                                    Height="30"
                                    Padding="8,7,5,5"
                                    DockPanel.Dock="Right"
                                    FontSize="12"
                                    Increment="0.1"
                                    Maximum="3"
                                    Minimum="0.5"
                                    ValueFormat="N1"
                                    Value="{Binding ElementName=ContrastSlider, Path=Value, Delay=100}" />
                                <Slider
                                    x:Name="ContrastSlider"
                                    Margin="-5,0,10,0"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.1"
                                    Maximum="3"
                                    Minimum="0.5"
                                    SmallChange="0.1"
                                    TickFrequency="0.1"
                                    Value="{Binding DisplayCurrent.Contrast, Mode=TwoWay, Delay=100}" />
                            </DockPanel>
                        </GroupBox>

                        <GroupBox Header="伽玛">
                            <DockPanel>
                                <liftui:NumericUpDown
                                    Width="75"
                                    Height="30"
                                    Padding="8,7,5,5"
                                    DockPanel.Dock="Right"
                                    FontSize="12"
                                    Increment="0.05"
                                    Maximum="5"
                                    Minimum="0.1"
                                    ValueFormat="N2"
                                    Value="{Binding ElementName=GammaSlider, Path=Value, Delay=100}" />
                                <Slider
                                    x:Name="GammaSlider"
                                    Margin="-5,0,10,0"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.05"
                                    Maximum="5"
                                    Minimum="0.1"
                                    SmallChange="0.05"
                                    TickFrequency="0.05"
                                    Value="{Binding DisplayCurrent.Gamma, Mode=TwoWay, Delay=100}" />
                            </DockPanel>
                        </GroupBox>

                        <GroupBox Header="伪彩">

                            <ComboBox ItemsSource="{x:Static advanced:DisplayModelExtension.Colors}" SelectedIndex="{Binding DisplayCurrent.ColorMode}">

                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="280" Height="30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="75" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="20,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="13"
                                                Text="{Binding}"
                                                TextAlignment="Left" />

                                            <Viewbox
                                                Grid.Column="2"
                                                Height="20"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center">
                                                <Rectangle
                                                    Width="200"
                                                    Height="20"
                                                    Fill="{Binding Converter={StaticResource ColorNameToBrushConverter}}"
                                                    RadiusX="2"
                                                    RadiusY="2"
                                                    Stroke="Black"
                                                    StrokeThickness="0.5" />
                                            </Viewbox>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>

                                <ComboBox.ItemContainerStyle>
                                    <Style BasedOn="{StaticResource ComboBoxItemBaseStyle}" TargetType="ComboBoxItem" />
                                </ComboBox.ItemContainerStyle>

                            </ComboBox>
                        </GroupBox>

                        <Button
                            Width="150"
                            Margin="5"
                            Command="{Binding DisplayCurrent.SetAsDefaultCommand}"
                            Content="恢复默认设置" />
                    </StackPanel>
                </Border>
            </StackPanel>


        </Border>

        <Border
            Grid.Column="1"
            Margin="2"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="8">

            <liftui:ImageViewer ImageSource="{Binding DisplayCurrent.Frame}" ShowImgMap="True" />

        </Border>

    </Grid>
</Window>
